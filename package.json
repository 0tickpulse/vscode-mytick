{
    "name": "vscode-mytick",
    "displayName": "vscode-mytick",
    "description": "Extension that adds utilities to Mythic configurations.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:mythic"
    ],
    "main": "./client/out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "mythic",
                "aliases": [
                    "YAML",
                    "yaml"
                ],
                "extensions": [
                    ".yaml",
                    ".yml",
                    ".mythic"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mythic",
                "scopeName": "source.mythic",
                "path": "./syntaxes/mythic.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "vscode-mytick.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "build": "tsc -b",
        "watch": "tsc -b -w",
        "lintClient": "eslint client --ext ts",
        "lintServer": "eslint server --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.26.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.1-beta"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2"
    }
}